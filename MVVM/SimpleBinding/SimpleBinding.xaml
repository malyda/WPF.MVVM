<Page x:Class="WPF.MVVM.SimpleBinding.SimpleBinding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPF.MVVM.AllInOne"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AllInOnePage">

    <StackPanel Margin="10" HorizontalAlignment="Center">
        <TextBlock FontSize="18" Text="Simple Binding" Padding="0,0,0,10" />
        <TextBlock Text="{Binding BoundText}" />
        <TextBlock Text="{Binding BoundNumber, StringFormat='Some number: {0}'}" />
    </StackPanel>
</Page>